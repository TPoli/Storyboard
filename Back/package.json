{
  "name": "storyboard_backend",
  "version": "1.0.0",
  "description": "API for Storyboard",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc --project ./",
    "migrate-up": "ts-node ./src/db/migrations/migrateUp.ts",
    "update-tables": "echo no-op",
    "baseline": "ts-node ./src/db/migrations/baseline.ts",
    "dev-win": "npm run lint && npm run cleanup-win && npm run build && node ./dist/Back/index.js",
    "dev-linux": "npm run lint && npm run cleanup-linux && npm run build && node ./dist/Back/index.js",
    "watch-win": "tsc-watch --onSuccess \"npm run dev-win\"",
    "watch-linux": "tsc-watch --onSuccess \"npm run dev-linux\"",
    "cleanup-linux": "rm -r dist\"",
    "cleanup-win": "rmdir /s /q dist",
    "lint": "eslint --rulesdir ../ . --ext .ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.36",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^6.8.0",
    "jest": "^27.4.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.1.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "eslint-loader": "^3.0.2",
    "express": "^4.17.1",
    "express-mysql-session": "^2.1.8",
    "express-session": "^1.17.2",
    "express-validator": "^6.12.1",
    "mysql2": "^2.3.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "random": "^3.0.6",
    "reflect-metadata": "^0.1.13"
  }
}
